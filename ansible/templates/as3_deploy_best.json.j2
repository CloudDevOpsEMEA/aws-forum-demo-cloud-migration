{
  "class": "AS3",
  "action": "deploy",
  "declaration": {
    "class": "ADC",
    "schemaVersion": "3.7.0",
    "id": "DemoWebServers",
    "label": "DemoWebServers",
    "remark": "DemoWebServers",
    "{{ tenant }}": {
      "class": "Tenant",
      "{{ application }}": {
        "class": "Application",
        "template": "generic",
        "WebServerVIP": {
          "class": "Service_HTTPS",
          "virtualAddresses": ["0.0.0.0"],
          "snat": "auto",
          "pool": "WebServerPoolHttps",
          "profileHTTP": "basic",
          "serverTLS": "webtls",
          "policyWAF": {
						"use": "linux_high"
					}
        },
        "WebServerPoolHttps": {
          "class": "Pool",
          "monitors": ["http"],
          "reselectTries": 100,
          "members": [
            {
              "servicePort": 80,
{% if not auto_discovery %}
              "serverAddresses": [
{% for application_private_ip in application_private_ips %}
                "{{ application_private_ip }}"{% if not loop.last %},
{% endif %}
{% endfor %}

              ]
{% endif %}
{% if auto_discovery %}
              "addressDiscovery": "aws",
              "updateInterval": 30,
              "tagKey": "Autodiscovery",
              "tagValue": "true",
              "addressRealm": "private",
              "accessKeyId": "{{ aws_access_key_id }}",
              "secretAccessKey": "{{ aws_secret_access_key }}",
              "region": "{{ placement.region }}",
              "credentialUpdate": true
{% endif %}
            }
          ]
        },
        "webtls": {
          "class": "TLS_Server",
          "certificates": [
            {
              "certificate": "webcert"
            }
          ]
        },
        "webcert": {
          "class": "Certificate",
          "certificate": {
            "bigip": "/Common/default.crt"
          },
          "privateKey": {
            "bigip": "/Common/default.key"
          }
        },
        "linux_high": {
			    "class": "WAF_Policy",
    		    "url": "https://raw.githubusercontent.com/f5devcentral/f5-automation-labs/master/files/asm-policies/demo-asm-policy-linux-high.xml",
			    "ignoreChanges": true
       		    }
      }
    }
  }
}
